<div class="holder">

    <div class="row">
        <h1>Clientes</h1>
    </div>

    <div class="row">
        <div class="col-7">
            <h3>Listado de clientes</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/clientes/agregar"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Cliente</th>
                        <th scope="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each clientes}}
                    <tr>
                        <th scope="row">{{idCliente}}</th>
                        <td>{{nomApellido}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" title="Editar" href=""><i class="fa fa-pencil"
                                    aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" title="Eliminar" href=""><i class="fa fa-trash"
                                    aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>
<div style="margin-top: 50px; margin-left: 100px">
    <form action="/admin/login" method="post">
        <div class="mb-3">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="inputUser" class="form-label">Usuario</label>
                </div>
                <div class="col-auto">
                    <input type="text" class="form-control" id="inputUser" name="usuario" placeholder="Usuario"
                        style="width: 350px;">
                </div>
            </div>
        </div>
        <div class="mb-3">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="inputPassword" class="col-form-label">Contraseña</label>
                </div>
                <div class="col-auto">
                    <input type="password" id="inputPassword" class="form-control" name="password">
                </div>

            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Ingresar</button>
        </div>
    </form>
    {{#if error}}
        <p class="text-danger">Usuario y/o contraseña incorrectos</p>
    {{/if}}
</div>